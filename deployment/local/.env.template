# OpenCloudTouch Deployment Configuration
# Copy this file to .env and adjust to your infrastructure

# Remote Server Configuration
DEPLOY_HOST=192.168.1.11
DEPLOY_USER=root
DEPLOY_USE_SUDO=false

# Container Configuration
CONTAINER_NAME=opencloudtouch
CONTAINER_TAG=opencloudtouch:latest
CONTAINER_PORT=7777

# Station Descriptor Base URL
# IMPORTANT: Must be IP address (not hostname) so Bose devices can resolve it
# Leave empty to auto-generate from DEPLOY_HOST:CONTAINER_PORT
OCT_STATION_DESCRIPTOR_BASE_URL=http://192.168.1.11:7777

# Remote Paths (on deployment target)
REMOTE_DATA_PATH=/mnt/tank/applications/opencloudtouch/data
REMOTE_IMAGE_PATH=/tmp

# Local Configuration
LOCAL_DATA_PATH=./deployment/data-local

# Optional: Manual Device IPs (comma-separated)
# OCT_MANUAL_DEVICE_IPS=192.168.1.100,192.168.1.101
